<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <cu.fresnohernandez99.app.navegando.ui.customviews.imageview.imagezoom.ImageViewTouch
        android:id="@+id/imageTouchPreview"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_two_speaking_body_in_laptops" />

    <ImageButton
        android:id="@+id/closeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:background="@null"
        android:contentDescription="@string/img_btn_close_description"
        android:src="@drawable/ic_close_cross"
        android:tint="@color/primary" />

</LinearLayout>