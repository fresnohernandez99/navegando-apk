<resources>

    <style name="Widget.Theme.Navegando.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.Theme.Navegando.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.Navegando">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="TopTexts">
        <item name="android:textSize">@dimen/topTexts</item>
        <item name="android:textColor">@color/onSecondary</item>
        <item name="android:layout_marginTop">@dimen/topTextMargin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Username">
        <item name="android:textSize">@dimen/usernameText</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FragmentsIn">
        <item name="android:layout_marginStart">@dimen/borderContentMargin</item>
        <item name="android:layout_marginEnd">@dimen/borderContentMargin</item>
    </style>

    <style name="CardQuestionDialog">
        <item name="cardBackgroundColor">@color/primaryVariant</item>
        <item name="cardCornerRadius">@dimen/corners</item>
        <item name="cardElevation">@dimen/cardsElevations</item>
        <item name="android:theme">@style/SelectableItemTheme</item>
    </style>

    <style name="QuestionTexts">
        <item name="android:textSize">@dimen/questionTexts</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardOptionItem">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/corners</item>
        <item name="cardElevation">@dimen/optionElevations</item>
        <item name="android:theme">@style/SelectableItemTheme</item>
    </style>

    <style name="OptionTexts">
        <item name="android:textSize">@dimen/optionTexts</item>
        <item name="android:textColor">@color/onSecondary</item>
    </style>

    <style name="ArticleTitles">
        <item name="android:textSize">@dimen/questionTitles</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ArticleSubtitles">
        <item name="android:textSize">@dimen/questionTexts</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ArticleTexts">
        <item name="android:textSize">@dimen/questionTexts</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="AskEditTexts">
        <item name="android:maxLength">10</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/askEditTextPadding</item>
        <item name="android:textColor">@color/onSecondary</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="FillContentEditTexts">
        <item name="android:maxLength">140</item>
        <item name="android:minLines">4</item>
        <item name="android:padding">@dimen/askEditTextPadding</item>
        <item name="android:textColor">@color/onSecondary</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="ArticleMiniTitle">
        <item name="android:textSize">@dimen/miniTitleTexts</item>
        <item name="android:textColor">@color/onSecondary</item>
    </style>

    <style name="ArticleMiniDescription">
        <item name="android:textSize">@dimen/miniDescriptionTexts</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/primaryVariant</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
</resources>